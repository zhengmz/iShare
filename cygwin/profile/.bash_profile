parse_git_branch() {  
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/[git::\1]/'  
}

export PS1='\[\e]0;\w\a\]\[\e[32m\]\u@\h \[\e[33m\]\w\n\[\e[34m\]$(parse_git_branch)\[\e[0m\]\$ '

